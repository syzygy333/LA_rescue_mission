<h1><%= @question.title %></h1>
<p><%= @question.description %></p>

<%= button_to "Edit Question", { controller: :questions, action: 'edit',
      id: @question.id }, method: :get %>

<%= button_to "Delete Question", { controller: :questions,
      action: 'destroy', id: @question.id }, method: :delete %>

<!-- <a href="/questions/<%= @question.id %>/edit">Edit</a> -->

<% if @answers %>
<ul>
  <% @answers.each do |answer| %>
    <li><%= answer.answer %></li>
  <% end %>
</ul>
<% end %>

<%= form_for [@question, @answer] do |f| %>
  <%= f.label :answer %>
  <%= f.text_area :answer %>

  <%= f.hidden_field :user_id, value: "2" %>
  <%= f.hidden_field :question_id, value: @question.id %>

  <%= f.submit "Answer" %>
<% end %>
